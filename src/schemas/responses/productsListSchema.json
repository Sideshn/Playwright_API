{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Products List Response",
  "type": "object",
  "required": ["products"],
  "properties": {
    "products": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "name", "price", "brand", "category"],
        "properties": {
          "id": { "type": "number" },
          "name": { "type": "string", "minLength": 1 },
          "price": { "type": "string" },
          "brand": { "type": "string", "minLength": 1 },
          "category": { "type": "object" }
        }
      }
    }
  }
}

